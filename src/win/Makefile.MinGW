  LIBS		+= -L$(ZLIB_PATH)/lib/x86
 endif
 ifeq ($(ZLIB), y)
  LIBS		+= -lz
 endif
 ifeq ($(ZLIB), s)
  LIBS		+= -lz_static
 endif
endif

#MiniVHD
ifndef MINIVHD
 MINIVHD		:= n
endif
ifneq ($(MINIVHD), n)
 ifeq ($(MINIVHD_PATH), )
  MINIVHD_PATH	:= $(EXT_PATH)/minivhd
 endif
  OPTS		+= -DUSE_MINIVHD -I$(MINIVHD_PATH)
  MISCOBJ	+= minivhd_util.o minivhd_manage.o minivhd_io.o minivhd_struct_rw.o minivhd_create.o cwalk.o libxml2_encoding.o
endif

# WX: N=no, Y=yes,linked, D=yes,dynamic, S=yes,static
ifneq ($(WX), n)
 OPTS		+= -DUSE_WX=$(WX) $(WX_FLAGS)
 LIBS		+= $(WX_LIBS) -lm
 UIOBJ		:= wx_main.o wx_ui.o wx_stbar.o wx_render.o
else
 UIOBJ		:= win_ui.o \
		   win_ddraw.o win_d3d.o $(SDLOBJ) \
		   win_dialog.o win_about.o win_settings.o \
		   win_devconf.o win_snd_gain.o win_new_image.o
endif

# Options for the DEV branch.
ifeq ($(DEV_BRANCH), y)
 OPTS		+= -DDEV_BRANCH
 DEVBROBJ	:= m_hp.o

 ifeq ($(AMD_K), y)
  OPTS		+= -DUSE_AMD_K
