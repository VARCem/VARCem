  LIBS		+= -L$(VNS_PATH)/lib/x64
 else
  LIBS		+= -L$(VNS_PATH)/lib/x86
 endif
 ifeq ($(VNS), y)
  LIBS		+= -lvns.dll
 endif
 ifeq ($(VNS), s)
  LIBS		+= -lvns
 endif
 MISCOBJ	+= net_vns.o
endif

# FreeType (always dynamic)
ifndef FREETYPE
 FREETYPE	:= d
endif
ifneq ($(FREETYPE), n)
 ifeq ($(FREETYPE_PATH), )
  FREETYPE_PATH	:= $(EXT_PATH)/freetype
 endif
 OPTS		+= -DUSE_FREETYPE -I$(FREETYPE_PATH)/include
 ifeq ($(FREETYPE), d)
 endif
endif

# OpenAL (always dynamic)
ifndef OPENAL
 OPENAL		:= d
endif
ifneq ($(OPENAL), n)
 ifeq ($(OPENAL_PATH), )
  OPENAL_PATH	:= $(EXT_PATH)/openal
 endif
 OPTS		+= -DUSE_OPENAL -I$(OPENAL_PATH)/include
 ifeq ($(OPENAL), d)
 endif
endif

# FluidSynth (always dynamic)
ifndef FLUIDSYNTH
 FLUIDSYNTH	:= d
endif
ifneq ($(FLUIDSYNTH), n)
 ifeq ($(FLUIDSYNTH_PATH), )
  FLUIDSYNTH_PATH	:= $(EXT_PATH)/fluidsynth
 endif
 ifeq ($(FLUIDSYNTH), d)
 endif
 OPTS		+= -DUSE_FLUIDSYNTH -I$(FLUIDSYNTH_PATH)/include
endif

# MunT: N=no, Y=yes,linked, D=yes,dynamic, S=yes,static
ifndef MUNT
 MUNT		:= d
endif
ifneq ($(MUNT), n)
 ifeq ($(MUNT_PATH), )
  MUNT_PATH	:= $(EXT_PATH)/munt
 endif
 ifeq ($(MUNT), d)
  OPTS		+= -DUSE_MUNT=2
 else
  OPTS		+= -DUSE_MUNT=1
 endif
 OPTS		+= -I$(MUNT_PATH)/include
 ifeq ($(X64), y)
  LIBS		+= -L$(MUNT_PATH)/lib/x64
 else
  LIBS		+= -L$(MUNT_PATH)/lib/x86
 endif
 ifeq ($(MUNT), y)
  LIBS		+= -lmunt.dll
 endif
 ifeq ($(MUNT), s)
  LIBS		+= -lmunt
 endif
endif

# reSID: N=no, Y=yes,linked, D=yes,dynamic, S=yes,static
ifndef RESID
 RESID		:= d
endif
ifneq ($(RESID), n)
 ifeq ($(RESID_PATH), )
  RESID_PATH	:= $(EXT_PATH)/resid
  MISCOBJ	+= snd_ssi2001.o
 endif
 ifeq ($(RESID), d)
  OPTS		+= -DUSE_RESID=2
 else
  OPTS		+= -DUSE_RESID=1
 endif
 OPTS		+= -I$(RESID_PATH)/include
 ifeq ($(X64), y)
  LIBS		+= -L$(RESID_PATH)/lib/x64
 else
  LIBS		+= -L$(RESID_PATH)/lib/x86
 endif
 ifeq ($(RESID), y)
  LIBS		+= -lresid.dll
 endif
 ifeq ($(RESID), s)
  LIBS		+= -lresid
 endif
endif

# SDL: N=no, Y=yes,linked, D=yes,dynamic, S=yes,static
ifndef SDL
 SDL		:= n
endif
ifneq ($(SDL), n)
 ifeq ($(SDL_PATH), )
  SDL_PATH	:= $(EXT_PATH)/sdl
 endif
 OPTS		+= -DUSE_SDL
 OPTS		+= -I$(SDL_PATH)/include
 ifeq ($(X64), y)
  LIBS		+= -L$(SDL_PATH)/lib/x64
 else
  LIBS		+= -L$(SDL_PATH)/lib/x86
 endif
 ifeq ($(SDL), y)
  LIBS		+= -lsdl2.dll
 endif
 ifeq ($(SDL), s)
  LIBS		+= -lsdl2
 endif
 SDLOBJ		:= win_sdl.o
endif

# DINPUT and XInput (always hard-linked)
ifndef DINPUT
 DINPUT		:= y
 ifeq ($(ARM), y)
  DINPUT	:= n
 endif
endif
ifeq ($(DINPUT), y)
 OPTS		+= -DUSE_DINPUT
 LIBS		+= -ldinput8
else
 LIBS		+= -lxinput
endif

# VNC: N=no, Y=yes,linked, D=yes,dynamic, S=yes,static
ifndef VNC
 VNC		:= n
endif
ifneq ($(VNC), n)
 ifeq ($(VNC_PATH), )
  VNC_PATH	:= $(EXT_PATH)/vnc
 endif
 ifeq ($(VNC), d)
  OPTS		+= -DUSE_VNC=2
 else
  OPTS		+= -DUSE_VNC=1
 endif
 OPTS		+= -I$(VNC_PATH)/include
 ifeq ($(X64), y)
  LIBS		+= -L$(VNC_PATH)/lib/x64
 else
  LIBS		+= -L$(VNC_PATH)/lib/x86
 endif
 ifeq ($(VNC), y)
  LIBS		+= -lvncserver.dll
 endif
 ifeq ($(VNC), s)
  LIBS		+= -lvncserver -lz -static -lpthread
 endif
 MISCOBJ	+= ui_vnc.o ui_vnc_keymap.o
 ZLIB		:= $(VNC)
endif

# RDP: N=no, Y=yes,linked, D=yes,dynamic, S=yes,static
ifndef RDP
 RDP		:= n
endif
ifneq ($(RDP), n)
 ifeq ($(RDP_PATH), )
  RDP_PATH	:= $(EXT_PATH)/rdp
 endif
 ifeq ($(RDP), d)
  OPTS		+= -DUSE_RDP=2
 else
  OPTS		+= -DUSE_RDP=1
 endif
 OPTS		+= -I$(RDP_PATH)/include
 ifeq ($(X64), y)
  LIBS		+= -L$(RDP_PATH)/lib/x64
 else
  LIBS		+= -L$(RDP_PATH)/lib/x86
 endif
